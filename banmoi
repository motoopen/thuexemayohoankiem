    <!-- === Inline JS (IIFE, Defer) === -->
    <!-- Script MotoAI v36 đã BỊ LOẠI BỎ theo yêu cầu -->
    <script defer>
        (function() {
            'use strict';

            // --- CẤU HÌNH TỪ JSON ---
            // 1. Theme Randomizer
            const THEME_POOL = [
                "UltraTitanGlass", "FacebookUltra", "GooglePure", "HondaRedMotion", 
                "NeoMint", "MidnightPurple", "AeroGlassBlue", "SunsetOrange", 
                "MotoDarkCarbon", "MinimalWhite"
            ];
            const RANDOMIZE_ON_LOAD = true;
            
            // 2. Auto Accent Palette
            const ACCENT_PALETTE = {
                "UltraTitanGlass":"#0A84FF",
                "FacebookUltra":"#1877F2",
                "GooglePure":"#4285F4",
                "HondaRedMotion":"#DA251D",
                "NeoMint":"#9CF5B0",
                "MidnightPurple":"#6C4AE4",
                "AeroGlassBlue":"#4FC3F7",
                "SunsetOrange":"#FF7043",
                "MotoDarkCarbon":"#202020",
                "MinimalWhite":"#DDDDDD"
            };
            const DEFAULT_ACCENT = '#0A84FF'; // Màu của UltraTitanGlass
            
            // 3. Style
            const DEFAULT_THEME_MODE = 'auto'; // "auto", "light", "dark"

            // --- KHI DOM ĐÃ TẢI ---
            document.addEventListener('DOMContentLoaded', () => {

                // --- 1. Lấy đối tượng DOM ---
                const body = document.body;
                const header = document.getElementById('main-header');
                const themeToggleBtn = document.getElementById('theme-toggle-btn');
                const mobileMenuToggle = document.getElementById('mobile-menu-toggle');
                const navMenu = document.getElementById('nav-menu');
                const quickCallToggle = document.getElementById('quick-call-toggle');
                const quickCallApp = document.getElementById('quick-call-app');
                
                // --- 2. Hệ thống Theme (Randomizer & Accent) ---
                
                /**
                 * Áp dụng một theme và màu accent tương ứng
                 * @param {string} themeName Tên theme (vd: "FacebookUltra")
                 */
                function applyTheme(themeName) {
                    if (!themeName || !THEME_POOL.includes(themeName)) {
                        themeName = THEME_POOL[0]; // Mặc định về theme đầu tiên
                    }
                    
                    // 1. Gán data-theme vào body
                    body.dataset.theme = themeName;
                    
                    // 2. Lấy màu accent từ bảng màu
                    const accentColor = ACCENT_PALETTE[themeName] || DEFAULT_ACCENT;
                    
                    // 3. Ghi đè biến CSS --accent-color
                    document.documentElement.style.setProperty('--accent-color', accentColor);
                    
                    // 4. (Tùy chọn) Cập nhật theme-color của trình duyệt
                    const themeColorMeta = document.querySelector('meta[name="theme-color"]');
                    if (themeColorMeta) {
                        themeColorMeta.setAttribute('content', accentColor);
                    }
                    
                    // 5. Lưu lựa chọn vào localStorage
                    try {
                        localStorage.setItem('userTheme', themeName);
                    } catch (e) {
                        console.warn('Không thể lưu theme vào localStorage.');
                    }
                }

                /**
                 * Khởi tạo theme khi tải trang
                 */
                function initializeTheme() {
                    let themeToApply = THEME_POOL[0]; // Mặc định
                    try {
                        const savedTheme = localStorage.getItem('userTheme');
                        
                        if (savedTheme && THEME_POOL.includes(savedTheme)) {
                            // Ưu tiên 1: Theme người dùng đã lưu
                            themeToApply = savedTheme;
                        } else if (RANDOMIZE_ON_LOAD) {
                            // Ưu tiên 2: Random nếu được bật
                            const randomIndex = Math.floor(Math.random() * THEME_POOL.length);
                            themeToApply = THEME_POOL[randomIndex];
                        }
                    } catch (e) {
                        // Nếu localStorage lỗi, dùng random (nếu bật)
                        if (RANDOMIZE_ON_LOAD) {
                            const randomIndex = Math.floor(Math.random() * THEME_POOL.length);
                            themeToApply = THEME_POOL[randomIndex];
                        }
                    }
                    
                    applyTheme(themeToApply);
                }

                // --- 3. Hệ thống Light / Dark Mode ---
                
                /**
                 * Áp dụng theme mode
                 * @param {string} mode "light", "dark", hoặc "auto"
                 */
                function applyThemeMode(mode) {
                    body.dataset.themeMode = mode;
                    try {
                        localStorage.setItem('userThemeMode', mode);
                    } catch (e) {
                         console.warn('Không thể lưu theme mode vào localStorage.');
                    }
                }

                /**
                 * Khởi tạo theme mode khi tải trang
                 */
                function initializeThemeMode() {
                    let savedMode = DEFAULT_THEME_MODE;
                    try {
                        savedMode = localStorage.getItem('userThemeMode') || DEFAULT_THEME_MODE;
                    } catch (e) {
                        // Dùng default nếu localStorage lỗi
                    }
                    applyThemeMode(savedMode);
                }

                /**
                 * Sự kiện click nút đổi theme mode
                 */
                if (themeToggleBtn) {
                    themeToggleBtn.addEventListener('click', () => {
                        let currentMode = body.dataset.themeMode;
                        
                        // Nếu đang là "auto", phải xác định xem thực tế là sáng hay tối
                        if (currentMode === 'auto') {
                            currentMode = window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light';
                        }
                        
                        // Chuyển đổi
                        const newMode = currentMode === 'light' ? 'dark' : 'light';
                        applyThemeMode(newMode);
                    });
                }

                // --- 4. Hiệu ứng Ripple (Glow) ---
                
                /**
                 * Tạo hiệu ứng gợn sóng khi click
                 * @param {Event} event
                 */
                function createRipple(event) {
                    const target = event.currentTarget;
                    
                    // Xóa ripple cũ nếu có
                    const existingRipple = target.querySelector('.ripple-effect');
                    if(existingRipple) {
                        existingRipple.remove();
                    }

                    const circle = document.createElement('span');
                    const diameter = Math.max(target.clientWidth, target.clientHeight);
                    const radius = diameter / 2;

                    circle.style.width = circle.style.height = `${diameter}px`;
                    
                    const rect = target.getBoundingClientRect();
                    circle.style.left = `${event.clientX - rect.left - radius}px`;
                    circle.style.top = `${event.clientY - rect.top - radius}px`;
                    
                    circle.classList.add('ripple-effect');
                    target.appendChild(circle);
                    
                    // Tự xóa sau khi animation kết thúc
                    circle.addEventListener('animationend', () => {
                        circle.remove();
                    });
                }
                
                // Gán sự kiện cho tất cả các phần tử có [data-ripple]
                document.querySelectorAll('[data-ripple]').forEach(element => {
                    element.addEventListener('click', createRipple);
                });


                // --- 5. Hiệu ứng Header (Scroll) ---
                if (header) {
                    const scrollThreshold = 100; // Ngưỡng scroll để kích hoạt
                    
                    window.addEventListener('scroll', () => {
                        if (window.scrollY > scrollThreshold) {
                            header.classList.add('scrolled');
                        } else {
                            header.classList.remove('scrolled');
                        }
                    }, { passive: true }); // Tối ưu hiệu suất scroll
                }

                // --- 6. Mobile Menu ---
                if (mobileMenuToggle && navMenu) {
                    mobileMenuToggle.addEventListener('click', () => {
                        navMenu.classList.toggle('active');
                        // Đổi icon menu
                        const icon = mobileMenuToggle.querySelector('.material-symbols-rounded');
                        if (navMenu.classList.contains('active')) {
                            icon.textContent = 'close';
                        } else {
                            icon.textContent = 'menu';
                        }
                    });
                    
                    // Xử lý dropdown trên mobile (click thay vì hover)
                    const dropdownLinks = navMenu.querySelectorAll('.has-dropdown > a');
                    dropdownLinks.forEach(link => {
                        link.addEventListener('click', (e) => {
                            // Chỉ chạy trên mobile (khi .nav-menu.active)
                            if (navMenu.classList.contains('active')) {
                                e.preventDefault(); // Ngăn click link
                                link.parentElement.classList.toggle('open');
                            }
                        });
                    });
                }
                
                // --- 7. Footer Quick Call App ---
                if (quickCallToggle && quickCallApp) {
                    quickCallToggle.addEventListener('click', (e) => {
                        e.preventDefault();
                        quickCallApp.classList.toggle('active');
                    });
                    
                    // Đóng khi click ra ngoài
                    document.addEventListener('click', (e) => {
                        if (quickCallApp.classList.contains('active') && !quickCallApp.contains(e.target)) {
                            quickCallApp.classList.remove('active');
                        }
                    });
                }
                
                // --- 8. Đánh dấu Menu Active ---
                try {
                    const currentPath = window.location.pathname.split('/').pop() || 'index.html';
                    const menuLinks = navMenu.querySelectorAll('a');
                    
                    menuLinks.forEach(link => {
                        const linkPath = link.getAttribute('href').split('/').pop();
                        
                        // Xóa active cũ
                        link.classList.remove('active');
                        
                        // Đặt active mới
                        if (linkPath === currentPath) {
                            link.classList.add('active');
                            // Mở menu cha nếu là link con
                            const parentDropdown = link.closest('.has-dropdown');
                            if (parentDropdown) {
                                parentDropdown.classList.add('active'); // Đánh dấu cho menu cha
                            }
                        }
                    });
                } catch (e) {
                    console.warn('Không thể đánh dấu menu active:', e);
                }


                // --- KHỞI CHẠY ---
                initializeTheme();
                initializeThemeMode();

            }); // Hết DOMContentLoaded

        })(); // Hết IIFE
    </script>

</body>
</html>


